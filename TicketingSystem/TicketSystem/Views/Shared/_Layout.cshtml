@using System.Security.Claims
@{
    var isLoginPage = ViewContext.RouteData.Values["controller"]?.ToString() == "Auth"
                   && ViewContext.RouteData.Values["action"]?.ToString() == "LoginForm";

    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();

    var isAuth = User?.Identity?.IsAuthenticated ?? false;
    var email = isAuth ? User.FindFirst(ClaimTypes.Email)?.Value : null;
    var isAdmin = User.IsInRole("Admin");
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>@ViewData["Title"] - Ticket System</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" />
    <link href="~/css/styles.css" rel="stylesheet" />
</head>
<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        @if (!isLoginPage)
        {
            <div class="border-end bg-white" id="sidebar-wrapper">
                <div class="sidebar-heading border-bottom bg-light">Ticket System</div>
                <div class="list-group list-group-flush">

                    <a class="list-group-item list-group-item-action list-group-item-light p-3 @(currentController == "Home" ? "active" : "")"
                       asp-controller="Home" asp-action="Index">Home Page</a>

                    @if (isAdmin)
                    {
                        <a class="list-group-item list-group-item-action list-group-item-light p-3 @(currentController == "Tickets" ? "active" : "")"
                           asp-controller="Tickets" asp-action="Index">Tickets</a>

                        <a class="list-group-item list-group-item-action list-group-item-light p-3 @(currentController == "Users" ? "active" : "")"
                           asp-controller="Users" asp-action="Index">Users</a>
                    }
                    else
                    {
                        <a class="list-group-item list-group-item-action list-group-item-light p-3 @(currentController == "Tickets" ? "active" : "")"
                           asp-controller="Tickets" asp-action="Create">Create Ticket</a>
                    }
                </div>
            </div>
        }

        <!-- Page content wrapper -->
        <div id="page-content-wrapper">
            @if (!isLoginPage)
            {
                <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                    <div class="container-fluid">
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav ms-auto mt-2 mt-lg-0">
                                @if (isAuth && !string.IsNullOrEmpty(email))
                                {
                                    <li class="nav-item">
                                        <span class="nav-link disabled">Signed in as @email</span>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-danger" href="/auth/logout">Çıkış Yap</a>
                                    </li>
                                }
                                else
                                {
                                    <li class="nav-item">
                                        <a class="nav-link" href="/auth/login">Giriş Yap</a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </nav>
            }

            <!-- Main content -->
            <div class="container-fluid mt-4">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/scripts.js"></script>
</body>
</html>
